			color: white
	############################# Image
	image:
		left: 24
		top: {if choose_type() == "lambda" then if choose_style() == "L" then 298 else 207 else 96}
		width: 697
		height: {if choose_type() == "lambda" then if choose_style() == "L" then 715 else 806 else 681}
		z index: 1
		mask: {choose_mask()}
	############################# Card type
	type prefix:
