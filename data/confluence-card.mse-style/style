		padding top: 2
		padding right: 5
		padding bottom: 2
		line height hard: 1.2
		line height line: 1.2
		line height soft: 1
	rule_text:
		left: 142
		top: {if choose_type() == "lambda" then 164 else 788}
		width: 566
		height: {if choose_type() == "lambda" then if choose_style() == "L" and not has_two_sections() then 169 else 77 else 95}
		font:
			name: Consolas
			size: 20
			scale down to: 7
			color: #d3d3d3
		symbol font:
			name: confluence-symbols.mse-symbol-font
			size: 20
		alignment: middle left
		z index: 2
		padding left: 5
		padding top: 2
		padding right: 5
		padding bottom: 2
		line height hard: 1.2
		line height line: 1.2
		line height soft: 1
	extra_text:
		left: 142
		top: {if choose_type() == "lambda" then 255 else 905}
		width: 566
		height: {if choose_type() == "lambda" then 77 else 95}
		font:
			name: Consolas
			size: 20
			scale down to: 7
			color: #d3d3d3
		symbol font:
			name: confluence-symbols.mse-symbol-font
			size: 20
		visible: {choose_type() == "function" or choose_type() == "kernel" or has_two_sections()}
		alignment: middle left
		z index: 1
		padding left: 5
		padding top: 2
		padding right: 5
		padding bottom: 2
		line height hard: 1.2
		line height line: 1.2
		line height soft: 1
	condition:
		left: 45
		top: {if choose_type() == "lambda" then if choose_style() == "L" and not has_two_sections() then 229 else 182 else 818}
		width: 63
		height: 43
		font:
			name: Consolas
			size: 22
			scale down to: 7
			color: #d3d3d3
		alignment: middle center
		z index: 2
	condition2:
		left: 45
		top: 270
		width: 63
		height: 43
		font:
			name: Consolas
			size: 22
			scale down to: 7
			color: #d3d3d3
		visible: {has_second_conditions()}
		alignment: middle center
		z index: 2
